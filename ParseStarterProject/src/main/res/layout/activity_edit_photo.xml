<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.parse.unimelb.EditPhotoActivity">

    <TextView
        android:id="@+id/text_contrast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Contrast: 10"
        android:layout_marginTop="5dp"/>

    <SeekBar
        android:id="@+id/seekbar_contrast"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:max="100"
        android:progress="10"
        android:layout_below="@+id/text_contrast"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/textview_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brightness: 50"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/seekbar_contrast"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:id="@+id/seekbar_brightness"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:layout_below="@+id/textview_brightness"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageview_edit"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="640px"
        android:layout_height="640px"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Crop"
            android:id="@+id/button_crop"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textColor="#ff33b5e5"
            android:background="#ffffff"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Saturation"
            android:id="@+id/button_saturation"
            android:layout_below="@+id/button_crop"
            android:layout_toLeftOf="@+id/button_engrave"
            android:layout_toStartOf="@+id/button_engrave"
            android:textColor="#ff33b5e5"
            android:background="#ffffff"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engrave"
            android:layout_weight="1"
            android:id="@+id/button_engrave"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/seekbar_brightness"
            android:layout_alignEnd="@+id/seekbar_brightness"
            android:textColor="#ff33b5e5"
            android:background="#ffffff"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color"
            android:layout_weight="1"
            android:id="@+id/button_color"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toLeftOf="@+id/button_saturation"
            android:layout_toStartOf="@+id/button_saturation"
            android:textColor="#ff33b5e5"
            android:background="#ffffff"/>
    </LinearLayout>


</RelativeLayout>
